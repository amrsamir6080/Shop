
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete Role</h2>
<form asp-action="Delete" method="post" id="role-form" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" readonly="readonly" name="name" required="required" value="@ViewBag.Name" class="form-control" />
            </div>

        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    $(document).ready(function () {
        $("#role-form").validate({
            rules: {
                RoleName: {
                    required: true,
                },
            },
            messages: {
                RoleName: "Enter your email",
            }

        });
    });
    </script>
}